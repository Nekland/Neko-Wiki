{
    "name": "nekland/symfony-nekland-edition",
    "license": "MIT",
    "type": "project",
    "description": "The \"Symfony Nekland Edition\" distribution",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php":                                  ">=5.3.3",
        "symfony/symfony":                      "2.4",
        "doctrine/orm":                         "2.4.*,>=2.2.3",
        "doctrine/doctrine-bundle":             "1.2.*",
        "twig/extensions":                      "1.0.*",
        "symfony/assetic-bundle":               "2.3.*",
        "symfony/swiftmailer-bundle":           "2.3.*",
        "symfony/monolog-bundle":               "2.4.*",
        "sensio/distribution-bundle":           "2.3.*",
        "sensio/framework-extra-bundle":        "2.3.*",
        "sensio/generator-bundle":              "2.3.*",
        "incenteev/composer-parameter-handler": "2.1.*",
        "yohang/dependency-tools":              "dev-master",
        "doctrine/doctrine-fixtures-bundle":    "2.2.*",
        "stof/doctrine-extensions-bundle":      "~1.1@dev"
    },
    "require-dev": {
        "behat/behat":                  "~3.0",
        "behat/mink-extension":         "~2@dev",
        "behat/mink-browserkit-driver": "*",
        "behat/mink-selenium2-driver":  "*",
        "phpspec/phpspec":              "~2.0",
        "knplabs/friendly-contexts":    "dev-master"
    },
    "scripts": {
        "post-install-cmd": [
            "Yohang\\DependencyTools::installDeps",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Yohang\\DependencyTools::updateDeps",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Nek-/dependency-tools"
        }
    ],
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "2.4-dev"
        },
        "dependency-tools": {
            "npm":   true,
            "bower": {
                "path": "node_modules/.bin/bower"
            }
        }
    }
}
